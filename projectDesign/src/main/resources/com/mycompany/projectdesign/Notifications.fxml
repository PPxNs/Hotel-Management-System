<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="400.0" maxWidth="350.0" spacing="10.0" styleClass="notification-container" stylesheets="@../../../CSS/notification.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.projectdesign.NotificationsController">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="notification-scroll-pane" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="notificationVBox" spacing="10.0" styleClass="notification-list-vbox" />
            </content>
        </ScrollPane>
        <Button onAction="#closeWindow" styleClass="notification-button" text="Clear All" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets bottom="10.0" left="15.0" right="15.0" top="0.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
